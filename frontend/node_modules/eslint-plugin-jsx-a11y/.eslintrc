{
  "root": true,
  "extends": [
    "airbnb-base",
    "plugin:flowtype/recommended"
  ],
  "ignorePatterns": [
    "lib/",
    "reports/",
    "examples/",
  ],
  "parser": "@babel/eslint-parser",
  "plugins": [
    "flowtype",
  ],
  "rules": {
    "max-len": "off",
    "no-template-curly-in-string": "off",
  ***REMOVED***,
  "overrides": [
    {
      "files": ["src/rules/*"],
      "extends": ["plugin:eslint-plugin/rules-recommended"],
      "rules": {
        "eslint-plugin/require-meta-docs-description": ["error", { "pattern": "^(Enforce|Require|Disallow)" ***REMOVED***],
        "eslint-plugin/require-meta-docs-url": [
          "error",
          { "pattern": "https://github.com/jsx-eslint/eslint-plugin-jsx-a11y/tree/HEAD/docs/rules/{{name***REMOVED******REMOVED***.md" ***REMOVED***,
        ],
        "eslint-plugin/require-meta-type": "off",
      ***REMOVED***,
    ***REMOVED***,
    {
      "files": ["__tests__/src/rules/*.js"],
      "extends": ["plugin:eslint-plugin/tests-recommended"],
    ***REMOVED***,
    {
      "files": ["__tests__/**/*"],
      "env": {
        "jest": true,
      ***REMOVED***,
    ***REMOVED***,
  ],
***REMOVED***
